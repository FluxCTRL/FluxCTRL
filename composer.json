{
    "name": "fluxctrl/fluxctrl",
    "description": "Minimalistic information flux management tool.",
    "homepage": "http://fluxctrl.io",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=5.4.16",
        "cakephp/cakephp": "3.0.*-dev",
        "mobiledetect/mobiledetectlib": "2.*",
        "cakephp/migrations": "dev-master",
        "cakephp/plugin-installer": "*",
        "friendsofcake/crud": "dev-cake3",
        "fguillot/picofeed": "~0.1.2",
        "gourmet/knp-menu": "dev-master"
    },
    "require-dev": {
        "d11wtq/boris": "1.0.*",
        "cakephp/debug_kit": "3.0.*-dev",
        "cakephp/bake": "dev-master",
        "cakephp/codeception": "dev-master"
    },
    "suggest": {
        "phpunit/phpunit": "Allows automated tests to be run without system-wide install.",
        "cakephp/cakephp-codesniffer": "Allows to check the code against the coding standards used in CakePHP."
    },
    "autoload": {
        "psr-4": {
            "FluxCtrl\\": "src",
            "FluxCtrl\\Clear\\": "plugins/FluxCtrl/Clear/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FluxCtrl\\Test\\": "tests"
        }
    },
    "scripts": {
        "post-install-cmd": "FluxCtrl\\Console\\Installer::postInstall",
        "post-autoload-dump": "Cake\\Composer\\Installer\\PluginInstaller::postAutoloadDump"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
